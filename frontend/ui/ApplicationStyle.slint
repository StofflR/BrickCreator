// Global singleton for application-wide styling constants
export global ApplicationStyle {
    // Colors - Primary
    out property <color> primary-color: #408ac5;
    out property <color> primary-dark: #27567c;
    out property <color> primary-light: #5ba3d9;
    
    // Colors - Neutral
    out property <color> background-color: #f5f5f5;
    out property <color> surface-color: #ffffff;
    out property <color> border-color: #ddd;
    out property <color> border-color-light: #eee;
    
    // Colors - Text
    out property <color> text-primary: #333;
    out property <color> text-secondary: #666;
    out property <color> text-tertiary: #777;
    out property <color> text-light: #999;
    out property <color> text-on-primary: #ffffff;
    
    // Spacing
    out property <length> spacing-xs: 3px;
    out property <length> spacing-sm: 5px;
    out property <length> spacing-md: 8px;
    out property <length> spacing-lg: 10px;
    out property <length> spacing-xl: 20px;
    
    // Border Radius
    out property <length> radius-sm: 3px;
    out property <length> radius-md: 6px;
    out property <length> radius-lg: 8px;
    
    // Border Width
    out property <length> border-thin: 1px;
    out property <length> border-normal: 1.5px;
    out property <length> border-thick: 2px;
    
    // Fonts
    out property <length> font-size-xs: 8px;
    out property <length> font-size-sm: 9px;
    out property <length> font-size-md: 12px;
    out property <length> font-size-lg: 14px;
    out property <length> font-size-xl: 16px;
    
    out property <int> font-weight-normal: 400;
    out property <int> font-weight-bold: 700;
    
    // Card Dimensions
    out property <length> card-width: 120px;
    out property <length> card-height: 70px;
    
    // Selection List
    out property <length> selection-height: 200px;
    out property <int> selection-columns: 5;
}
