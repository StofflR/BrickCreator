import { ApplicationStyle } from "../ApplicationStyle.slint";

// Base card component with consistent size and styling
export component BaseCard inherits Rectangle {
    in property <bool> is-selected: false;
    callback clicked();
    
    width: ApplicationStyle.card-width;
    height: ApplicationStyle.card-height;
    background: is-selected ? ApplicationStyle.primary-color : ApplicationStyle.background-color;
    border-radius: ApplicationStyle.radius-md;
    border-width: ApplicationStyle.border-thick;
    border-color: is-selected ? ApplicationStyle.primary-dark : ApplicationStyle.border-color;
    clip: true;
    
    TouchArea {
        width: 100%;
        height: 100%;
        clicked => root.clicked();
    }
}
